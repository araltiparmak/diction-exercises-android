        <activity android:name="com.araltiparmak.diction.activity.Exercise" />
        <activity android:name="com.araltiparmak.diction.activity.Exercises" />
        <activity android:name="com.araltiparmak.diction.activity.Twisters" />
        <activity android:name="com.araltiparmak.diction.activity.Settings" />
        <activity android:name="com.araltiparmak.diction.activity.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
